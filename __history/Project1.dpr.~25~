program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils, Logic, FileUnit;

var
  i, j, num : integer;
  pnt : PTTransportList;

procedure PrintStations;
var
  pnt : PTStationList;
begin
  pnt := stationList^.next;
  while pnt <> nil do
  begin
    writeln(pnt^.num,'  ',pnt^.name);
    pnt := pnt^.next;
  end;
end;

begin
